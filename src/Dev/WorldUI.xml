<GuiXml>

  <Controls>

    <!-- Every control's name must be *unique*. -->
    <TopLevelControl name="WMP_World_UI" clampedToScreen="true" movable="true" mouseEnabled="true" hidden="false" resizeHandleSize="10">
      <Dimensions x="190" y="130"/>
      <Anchor point="CENTER" relativeTo="GUI_ROOT" relativePoint="CENTER" offsetX="-600" offsetY="50" />
      <OnInitialized>WMP_WorldUI_OnInitialized(self)</OnInitialized>
      <Controls>

        <Backdrop name="$(parent)_BG" centerColor="000000" edgeColor="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" pixelRoundingEnabled="true">
          <AnchorFill/>
          <Edge edgeSize="1"/>
        </Backdrop>

        <Label name="$(parent)Headline" color="FFFFFF">
          <Anchor point="TOP" relativePoint="TOP" relativeTo="$(parent)" offsetY="10"/>
          <OnInitialized>self:SetText("|cFFAA33WMP World Menu|r");self:SetFont("ZoFontGameLargeBold");</OnInitialized>
        </Label>

        <!-- Connect Button -->
        <Control name="$(parent)DataRegion">
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)RemoveRegion" offsetX="10" offsetY="50"/>
          <Dimensions x="210" y="20"/>
          <Controls>

            <Backdrop name="$(parent)Start" inherits="ZO_SingleLineEditBackdrop_Keyboard">
              <Anchor point="TOPLEFT" relativePoint="TOPLEFT" />
              <Dimensions x="80"/>
              <Controls>
                <EditBox name="$(parent)Edit" inherits="ZO_DefaultEditForBackdrop" defaultText="Node ID">
                  <OnFocusGained>WMP_DebugUI_OnEditFocus(self)</OnFocusGained>
                </EditBox>
              </Controls>
            </Backdrop>

            <Backdrop name="$(parent)Goal" inherits="ZO_SingleLineEditBackdrop_Keyboard">
              <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Start" offsetX="10"/>
              <Dimensions x="80"/>
              <Controls>
                <EditBox name="$(parent)Edit" inherits="ZO_DefaultEditForBackdrop" defaultText="Node ID">
                  <OnFocusGained>WMP_DebugUI_OnEditFocus(self)</OnFocusGained>
                </EditBox>
              </Controls>
            </Backdrop>

          </Controls>
        </Control>

        <Button name="$(parent)Render" inherits="ZO_DefaultButton">
          <Anchor point="BOTTOM" relativePoint="BOTTOM" offsetY="-10" />
          <Dimensions x="120"/>
          <OnClicked>WMP_TestUI_Render()</OnClicked>
          <Controls>
            <Label name="$(parent)Text" font="WMP_Font" color="FFFFFF">
              <Anchor point="CENTER" relativePoint="CENTER" />
              <OnInitialized>self:SetText("|cFFAA33Render|r")</OnInitialized>
            </Label>
          </Controls>
        </Button>

      </Controls>
    </TopLevelControl>

  </Controls>
</GuiXml>
